{
  "info": {
    "name": "ReachInbox Onebox Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "http://localhost:4000/api/health" }
    },
    {
      "name": "Search Emails",
      "request": { "method": "GET", "url": {
        "raw": "http://localhost:4000/api/emails?q=",
        "host": ["http://localhost:4000"],
        "path": ["api","emails"],
        "query": [{"key":"q","value":""}]
      } }
    },
    {
      "name": "Set Category",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": "http://localhost:4000/api/emails/mock:INBOX:1/category",
        "body": {"mode":"raw","raw":"{\n  \"category\": \"Interested\",\n  \"subject\": \"Hello\",\n  \"from\": \"lead@example.com\"\n}"}
      }
    },
    {
      "name": "Suggest Reply",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": "http://localhost:4000/api/emails/suggest-reply",
        "body": {"mode":"raw","raw":"{\n  \"email\": \"Hi there\"\n}"}
      }
    }
  ]
}


